# Project Imara - Environment Variables
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-django-secret-key-here
DEBUG=False

# Database (PostgreSQL - Neon)
# If not set, SQLite will be used as fallback
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require
PGDATABASE=your_database_name
PGUSER=your_database_user
PGPASSWORD=your_database_password
PGHOST=your_database_host
PGPORT=5432

# AI Services
GROQ_API_KEY=your-groq-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile
GEMINI_MODEL=gemini-2.5-flash

# Email Dispatch (Brevo/Sendinblue)
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=imara-alerts@projectimara.org

# Admin Notifications
ADMIN_NOTIFICATION_EMAIL=projectimarahq@gmail.com

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_SECRET_TOKEN=your-webhook-secret-token-here

# Cloudflare Turnstile (CAPTCHA)
TURNSTILE_SITE_KEY=your-turnstile-site-key-here
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here

# Cloudflare R2 Storage (Media Files)
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_CUSTOM_DOMAIN=your-cdn-domain.com

# Cloudflare R2 Storage (Database Backups)
R2_BACKUP_BUCKET_NAME=your-backup-bucket-name

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=imara.africa,www.imara.africa
