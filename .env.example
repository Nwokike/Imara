# Project Imara - Environment Variables

# Django Settings 
SECRET_KEY=your-django-secret-key-here
DEBUG=False
ALLOWED_HOSTS=imara.africa,www.imara.africa

# AI Services 
GROQ_API_KEY=your-groq-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Email Dispatch 
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=imara-alerts@projectimara.org
ADMIN_NOTIFICATION_EMAIL=projectimarahq@gmail.com

# Cloudflare R2 Storage 
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_BACKUP_BUCKET_NAME=your-backup-bucket-name

# Cloudflare Turnstile 
TURNSTILE_SITE_KEY=your-turnstile-site-key-here
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here

# Telegram Bot 
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_SECRET_TOKEN=your-webhook-secret-token-here

# Meta Platform 
META_APP_SECRET=your-app-secret-here
META_PAGE_ACCESS_TOKEN=your-page-access-token-here
META_VERIFY_TOKEN=your-verification-token-here

# AI Model Selection 
GROQ_MODEL=llama-3.3-70b-versatile
GEMINI_MODEL=gemini-2.5-flash

# R2 Custom Domain
R2_CUSTOM_DOMAIN=your-cdn-domain.com

# Retention 
TRIAGE_MESSAGE_RETENTION_DAYS=90
TRIAGE_SESSION_RETENTION_DAYS=90
TRIAGE_FEEDBACK_RETENTION_DAYS=365