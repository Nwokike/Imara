modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "python_gemini:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Project Imara Web Server"

[[workflows.workflow]]
name = "Project Imara Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && gunicorn --bind 0.0.0.0:5000 --workers 2 --timeout 120 imara.wsgi:application"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41169
externalPort = 3000
